{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "lint",
            "type": "shell",
            "command": "eslint",
            "args": [
                "--ext",
                ".ts",
                "src"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$eslint-stylish"]
        }
    ]
}